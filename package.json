{
  "name": "@substrate-system/tapout",
  "version": "0.0.15",
  "description": "Run tests in a browser from the command line.",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "main": "dist/index.js",
  "bin": {
    "tapout": "./dist/cli.js"
  },
  "files": [
    "./dist/*",
    "./playwright.config.js"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./*": [
      "./dist/*.js",
      "./dist/*"
    ]
  },
  "scripts": {
    "lint": "eslint \"./**/*.{ts,js}\"",
    "test": "esbuild test/index.ts --platform=node --format=esm --keep-names --bundle | node --input-type=module | tap-spec",
    "test:unit": "esbuild test/index.ts --platform=node --format=esm --keep-names --bundle | node --input-type=module | tap-spec",
    "test:simple": "cat test/simple-test.js | node dist/cli.js",
    "test:complex": "cat test/tape-test.js | node dist/cli.js",
    "test:failing": "cat test/failing-test.js | node dist/cli.js",
    "test:timeout": "cat test/timeout-test.js | node dist/cli.js",
    "test:all-examples": "npm run test:simple && npm run test:complex",
    "build-esm": "esbuild src/*.ts --format=esm --metafile=dist/meta.json --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --sourcemap && tsc --emitDeclarationOnly --project tsconfig.build.json --outDir dist && cp src/test-runner.html dist/",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-esm",
    "toc": "markdown-toc --maxdepth 3 -i README.md",
    "changelog": "auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:'",
    "preversion": "npm run lint",
    "version": "npm run toc && npm run changelog && git add CHANGELOG.md README.md",
    "postversion": "git push --follow-tags && npm publish",
    "prepublishOnly": "npm run build",
    "postinstall": "playwright install msedge --with-deps"
  },
  "dependencies": {
    "@playwright/test": "^1.54.2",
    "playwright": "^1.54.2"
  },
  "devDependencies": {
    "@substrate-system/debug": "^0.9.2",
    "@substrate-system/tapzero": "^0.10.5",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "auto-changelog": "^2.5.0",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "markdown-toc": "^1.2.0",
    "tap-spec": "^5.0.0",
    "typescript": "^5.7.2"
  },
  "license": "SEE LICENSE IN LICENSE",
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/substrate-system/tapout.git"
  },
  "keywords": [
    "tap",
    "browser",
    "terminal",
    "stdout"
  ],
  "bugs": {
    "url": "https://github.com/substrate-system/tapout/issues"
  },
  "homepage": "https://github.com/substrate-system/tapout"
}
